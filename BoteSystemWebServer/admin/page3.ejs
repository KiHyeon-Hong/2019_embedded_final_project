<script language="javascript">
function showConfirm(){
if(confirm("정말로 삭제하시겠습니까?"))
{
	var myform = document.getElementById("frm");
	myform.submit();
	alert("삭제했습니다");
}else{
	alert("취소했습니다");
	return false;
}
}
function showConfirmK(){
if(event.keyCode == 13){
	if(confirm("정말로 삭제하시겠습니까?"))
	{
		var myform = document.getElementById("frm");
		myform.submit();
		alert("삭제했습니다");
	}else{
		alert("취소했습니다");
		return false;
	}

}
}
